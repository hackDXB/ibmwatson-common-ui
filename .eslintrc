{
  "extends": "eslint:recommended",

  "env" : {
    "node": true,
    "browser": true,
    "mocha": true
  },

  "rules" : {
    "strict": [2, "global"],
    "semi": [2, "always"],
    "quotes": [2, "single"],
    "curly": 2,
    "brace-style": [2, "1tbs", { "allowSingleLine": false }],

    "indent": [2, 2, { "SwitchCase" : 1, "VariableDeclarator" : 2 }],
    "key-spacing": [2, { "beforeColon" : true, "afterColon" : true }],
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [2, "always"],
    "keyword-spacing": 2,
    "space-in-parens": [2, "never"],
    "comma-spacing": [2, { "before": false, "after": true }],
    "no-multi-spaces": 2,
    "space-infix-ops": 2,

    "max-statements": [1, 20],
    "max-depth": [1, 4],
    "complexity": [1, 6],
    "max-nested-callbacks": [1, 5],

    "no-console": 2,
    "no-warning-comments": 1,

    "valid-jsdoc": [2, { }],

    "block-scoped-var": 2,
    "default-case": 1,
    "handle-callback-err": 2,
    "no-lonely-if" : 2,
    "no-self-compare": 2,
    "camelcase": 0,

    "no-sync": 2,

    "no-throw-literal": 2,
    "no-unused-vars": [2, { "vars" : "all", "args" : "none" }]
  },

  "globals" : {
    "angular" : true,
    "inject" : true,
    "$" : true,
    "_" : true,
    "sinon" : true,
    "should" : true,
    "validate" : true
  }
}
