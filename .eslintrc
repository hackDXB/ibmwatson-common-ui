{
  "extends": "eslint:recommended",

  "env" : {
    "node": true,
    "browser": true,
    "mocha": true,
    "jasmine": true
  },

  "rules" : {
    "strict": [2, "global"],
    "semi": [2, "always"],
    "quotes": [1, "single"],
    "key-spacing": [1, { "beforeColon" : true, "afterColon" : true }],
    "space-before-blocks": [1, "always"],
    "space-before-function-paren": [1, "always"],
    "space-after-keywords": [1, "always"],

    "max-statements": [1, 15],
    "max-depth": [1, 4],
    "complexity": [1, 5],
    "max-nested-callbacks": [1, 5],

    "no-console": 2,
    "no-warning-comments": 1,

    "valid-jsdoc": [1, { }],

    "block-scoped-var": 1,
    "default-case": 1,
    "handle-callback-err": 2,
    "no-lonely-if" : 2,
    "no-self-compare": 2,

    "no-sync": 2,

    "no-throw-literal": 1,
    "no-unused-vars": [2, { "vars": "all", "args": "none" }]
  },

  "globals" : {
    "angular" : true,
    "inject" : true,
    "$" : true,
    "_" : true,
    "sinon" : true
  }
}
